/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fga;
	font:				 	"Iosevka Nerd Font 15";
}

window {
    width:      			16%;
    padding:    			30px;
    border:					0px 0px 8px 0px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
